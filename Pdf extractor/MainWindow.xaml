<Window x:Class="Pdf_extractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pdf_extractor"
        mc:Ignorable="d"
        Title="XML Pdf-extractor" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <Button x:Name="InputSelect" Content="Select input" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="120" Height="50" FontSize="14"/>
        <TextBox x:Name="InputFile" HorizontalAlignment="Left" Height="50" Margin="190,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="668" FontSize="14" VerticalContentAlignment="Center" Padding="5px">
            <TextBox.ToolTip>
                <TextBlock>
                   Enter a filename or use the "Select input" button.
                </TextBlock>
            </TextBox.ToolTip>
        </TextBox>

    </Grid>
</Window>
